# ============================================
# DSPy Classification Studio - Configuration
# ============================================

# APPLICATION
APP_NAME=DSPy Classification Studio
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO
API_KEY=

# SERVER
HOST=0.0.0.0
PORT=8000

# PROVIDER: rule_based | ollama | google | openai | huggingface
PROVIDER=ollama

# OLLAMA (free, local)
OLLAMA_MODEL=llama3.2:3b
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_KEEP_ALIVE=30m

# GOOGLE GEMINI
GOOGLE_API_KEY=
GOOGLE_MODEL=gemini-2.0-flash-lite

# OPENAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# HUGGINGFACE
HF_TOKEN=
HF_MODEL=meta-llama/Llama-2-7b-chat-hf

# DATA
DATA_DIR=./data

# LLM runtime safety
LM_TIMEOUT_SECONDS=45
LM_MAX_TOKENS=256
LM_NUM_RETRIES=1
PRIMARY_ENGINE_TIMEOUT_SECONDS=40
